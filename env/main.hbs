    {{else}}
  domain = "mail.{{ env }}.{{ domain.domain_name }}"
    {{/compare}}
  {{/if}}
  test_emails = {{{array ses.test_emails}}}
  {{#if domain.enabled}}
  zone_id = module.domain.zone_id
  {{/if}}
}
{{/if}}




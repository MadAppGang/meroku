{{#compare (len amplify_apps) ">" 0}}
module "amplify" {
  source = "{{modules}}/amplify"
  project = "{{project}}"
  env = "{{env}}"

  # Domain configuration for auto-construction
  {{#if domain.domain_name}}
  base_domain = "{{domain.domain_name}}"
  {{/if}}
  {{#if domain.add_env_domain_prefix}}
  add_env_domain_prefix = {{domain.add_env_domain_prefix}}
  {{/if}}

  amplify_apps = [
    {{#each amplify_apps}}
    {
      name = "{{name}}"
      github_repository = "{{github_repository}}"
      branches = [
        {{#each branches}}
        {
          name = "{{name}}"
          {{#if stage}}
          stage = "{{stage}}"
          {{/if}}
          {{#if enable_auto_build}}
          enable_auto_build = {{enable_auto_build}}
          {{/if}}
          {{#if enable_pull_request_preview}}
          enable_pull_request_preview = {{enable_pull_request_preview}}
          {{/if}}
          {{#if environment_variables}}
          environment_variables = {
            {{#each environment_variables}}
            {{@key}} = "{{this}}"{{#unless @last}},{{/unless}}
            {{/each}}
          }
          {{/if}}
          {{#if custom_subdomains}}
          custom_subdomains = {{{array custom_subdomains}}}
          {{/if}}
        }{{#unless @last}},{{/unless}}
        {{/each}}
      ]
      {{#if subdomain_prefix}}
      subdomain_prefix = "{{subdomain_prefix}}"
      {{/if}}
      {{#if custom_domain}}
      custom_domain = "{{custom_domain}}"
      {{/if}}
    }{{#unless @last}},{{/unless}}
    {{/each}}
  ]
}
{{/compare}}


